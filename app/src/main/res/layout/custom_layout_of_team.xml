<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="00dp"
        android:layout_marginLeft="01dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardElevation="5dp"

        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
android:background="@drawable/transbackground"        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">




            <ImageView
                android:id="@+id/imageViewOfMakeup"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/intermedium"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:id="@+id/nameOfMakeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="LONG BOB HAIRCUT" />

                <RatingBar
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center"
                    style = "?android:attr/ratingBarStyleSmall"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:fontFamily="@font/inter"
                    android:id="@+id/textViewOfReviews"
                    android:layout_width="131dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="Android Developer"
                    android:textColor="#535557"
                    android:textSize="12sp" />

                <TextView
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="110dp"
                    android:layout_gravity="center"
                    android:id="@+id/rupeeOfMakeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />








            </LinearLayout>


    </LinearLayout>


</LinearLayout>
